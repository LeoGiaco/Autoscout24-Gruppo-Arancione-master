        <div class="row" style="background-color: rgba(85, 205, 221, 0.1);">
          <!-- Prima colonna per l'inserimento dei dati di ricerca(form) -->
          <div class="col-sm-4" style="padding: 1.5%; padding-right: 2%; padding-top:1%;">
            <form >
              <!-- Input marca -->
              <div class="form-group form-row justify-content-between">
                  <div class="col-sm-4">
                    <label for="feMarca">Marca:</label>
                  </div>
                  <div class="col-sm-8">
                    <select class="form-control" id="feMarca"></select>
                  </div>
              </div>

              <div class="form-group form-row justify-content-between">
                <div class="col-sm-4">
                  <label for="feModello">Modello:</label>
                </div>
                <div class="col-sm-8">
                  <select class="form-control" id="feModello"></select>
                </div>
              </div>
              <!-- Input Anno -->
              <div class="form-group form-row justify-content-between">
                <div class="col-sm-4">
                  <label for="feAnno">Anno da:</label>
                </div>
                <div class="col-sm-8">
                  <select class="form-control" id="feAnno"></select>
                </div>
              </div>
              <!-- Input Prezzo -->
              <div class="form-group form-row justify-content-between">
                <div class="col-sm-4">
                  <label for="fePrezzo">Prezzo fino a:</label>
                </div>
                <div class="col-sm-8">
                  <select class="form-control" id="fePrezzo"></select>
                </div>
              </div>
              <!-- Input Paese -->
              <div class="form-group form-row justify-content-between">
                <div class="col-sm-4">
                  <label for="fePaese">Paese:</label>
                </div>
                <div class="col-sm-8">
                  <select class="form-control" id="fePaese"></select>
                </div>
              </div>
              <!-- Input CAP -->
              <div class="form-group form-row justify-content-between">
                <div class="col-sm-4">
                    <label for="feCAP">CAP:</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="feCAP" placeholder="Inserisci CAP">
                </div>
              </div>
              <!-- Bottone -->
              <div class="form-group form-row justify-content-between">
                <div class="col-sm-8 offset-sm-4">
                    <button type="submit" class="btn btn-primary btn-block" id="feButton">10000 risultati</button>
                </div>
              </div>

            </form>
